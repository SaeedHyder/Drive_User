<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x10"
        android:layout_marginRight="@dimen/x10"
        android:layout_marginTop="@dimen/x10"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_Notificationlogo"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/x50"
            android:layout_gravity="center_vertical"
            android:src="@drawable/drive_logo"
            tools:ignore="ContentDescription" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <com.ingic.driveuser.ui.views.AnyTextView
                android:id="@+id/txt_Notification"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x10"
                android:gravity="center_vertical"
                android:text="Dummy Data Dummy Data"
                android:textColor="@color/light_grey"
                android:textSize="@dimen/x15"
                app:typeface="Roboto-Regular.ttf" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x10"
                android:layout_marginTop="@dimen/x5">

                <com.ingic.driveuser.ui.views.AnyTextView
                    android:id="@+id/txt_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:alpha="0.8"
                    android:gravity="center_vertical"
                    android:text="10 March 2018"
                    android:textColor="@color/dark_grey"
                    android:textSize="@dimen/x12"
                    app:typeface="Roboto-Regular.ttf" />

                <View
                    android:layout_width="@dimen/x1"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/x5"
                    android:layout_marginEnd="@dimen/x5"
                    android:background="@color/lineViewColor" />

                <com.ingic.driveuser.ui.views.AnyTextView
                    android:id="@+id/txt_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="12:30"
                    android:textColor="@color/dark_grey"
                    android:textSize="@dimen/x12"
                    android:alpha="0.8"
                    app:typeface="Roboto-Regular.ttf" />


            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x2"
        android:layout_marginTop="@dimen/x7"
        android:alpha="0.3"
        android:background="@drawable/line1" />

</LinearLayout>