<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:onClick="onClick"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/light_golden">

            <Button
                android:id="@+id/btn_past"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/transparent"
                android:text="@string/history"
                android:textAllCaps="false"
                android:textColor="@color/black" />

            <View
                android:id="@+id/history_view"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x3"
                android:layout_alignStart="@+id/btn_past"
                android:layout_below="@+id/btn_past"
                android:layout_marginEnd="@dimen/x35"
                android:layout_marginStart="@dimen/x35"
                android:background="@color/black" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/light_golden">

            <Button
                android:id="@+id/btn_upcoming"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/transparent"
                android:text="@string/Upcoming"
                android:textAllCaps="false"
                android:textColor="@color/upcoming_color" />

            <View
                android:id="@+id/upcoming_view"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x3"
                android:layout_alignStart="@+id/btn_upcoming"
                android:layout_below="@+id/btn_upcoming"
                android:layout_marginEnd="@dimen/x35"
                android:layout_marginStart="@dimen/x35"
                android:background="@color/black"
                android:visibility="invisible"/>

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/mainFrame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


    </LinearLayout>

</LinearLayout>