<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/drive_bg2"
   >

    <ImageView
        android:id="@+id/iv_LogoIcon"
        android:layout_width="@dimen/x150"
        android:layout_height="@dimen/x150"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/x20"
        android:layout_marginBottom="@dimen/x20"
        android:src="@drawable/drive_logo1"
        tools:ignore="ContentDescription" />

    <LinearLayout
        android:id="@+id/ll_currentPassword"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x40"
        android:layout_marginLeft="@dimen/x30"
        android:layout_marginRight="@dimen/x30"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_currentPasswordIcon"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.1"
            android:src="@drawable/drive_lock"
            tools:ignore="ContentDescription" />

        <com.ingic.driveuser.ui.views.AnyEditTextView
            android:id="@+id/edtcurrentPassword"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.8"
            android:paddingStart="@dimen/x5"
            android:background="@android:color/transparent"
            android:hint="@string/current_password"
            android:imeOptions="actionNext"
            android:inputType="textPassword"
            android:maxLength="16"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textColorHint="@color/grey"
            android:textSize="@dimen/x14"
            app:typeface="@string/font_normal" />

    </LinearLayout>

    <View
        android:id="@+id/currentPassView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:layout_marginLeft="@dimen/x30"
        android:layout_marginRight="@dimen/x30"
        android:layout_marginTop="@dimen/x3"
        android:alpha="0.6"
        android:background="@color/lineViewColor" />

    <LinearLayout
        android:id="@+id/ll_NewPassword"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x40"
        android:layout_marginLeft="@dimen/x30"
        android:layout_marginRight="@dimen/x30"
        android:layout_marginTop="@dimen/x10"

        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_NewPasswordIcon"
            android:layout_width="0dp"
            android:layout_weight="0.12"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/drive_lock"
            tools:ignore="ContentDescription" />


        <com.ingic.driveuser.ui.views.AnyEditTextView
            android:id="@+id/editNewPassword"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.8"
            android:inputType="textPassword"
            android:maxLength="16"
            android:maxLines="1"
            android:paddingStart="@dimen/x5"
            android:singleLine="true"
            android:layout_marginRight="@dimen/x20"
            android:background="@android:color/transparent"
            android:textColor="@color/white"
            android:textColorHint="@color/grey"
            android:hint="@string/new_password"
            android:textSize="@dimen/x14"
            app:typeface="@string/font_normal"
            />

        <ToggleButton
            android:id="@+id/togglePassword"
            android:layout_width="@dimen/x20"
            android:layout_height="@dimen/x12"
            android:padding="@dimen/x10"
            android:layout_marginRight="@dimen/x10"
            android:background="@drawable/drive_eye"
            android:text=""
            android:textOff=""
            android:textOn=""
            android:layout_gravity="center"
            android:checked="false"
            />





    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:layout_marginLeft="@dimen/x30"
        android:layout_marginRight="@dimen/x30"
        android:layout_marginTop="@dimen/x3"
        android:alpha="0.6"
        android:background="@color/lineViewColor" />

    <LinearLayout
        android:id="@+id/ll_ConfirmPassword"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x40"
        android:layout_marginLeft="@dimen/x30"
        android:layout_marginRight="@dimen/x30"
        android:layout_marginTop="@dimen/x10"

        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_ConfirmPasswordIcon"
            android:layout_width="0dp"
            android:layout_weight="0.12"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/drive_lock"
            tools:ignore="ContentDescription" />

        <com.ingic.driveuser.ui.views.AnyEditTextView
            android:id="@+id/editConfirmPassword"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.8"
            android:inputType="textPassword"
            android:maxLength="16"
            android:maxLines="1"
            android:paddingStart="@dimen/x5"
            android:singleLine="true"
            android:layout_marginRight="@dimen/x20"
            android:background="@android:color/transparent"
            android:textColor="@color/white"
            android:textColorHint="@color/grey"
            android:hint="@string/confirm_new_password"
            android:textSize="@dimen/x14"
            app:typeface="@string/font_normal"
            />

        <ToggleButton
            android:id="@+id/togglePassword1"
            android:layout_width="@dimen/x20"
            android:layout_height="@dimen/x12"
            android:padding="@dimen/x10"
            android:layout_marginRight="@dimen/x10"
            android:background="@drawable/drive_eye"
            android:text=""
            android:textOff=""
            android:textOn=""
            android:layout_gravity="center"
            android:checked="false"
            />



    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:layout_marginLeft="@dimen/x30"
        android:layout_marginRight="@dimen/x30"
        android:layout_marginTop="@dimen/x3"
        android:alpha="0.6"
        android:background="@color/lineViewColor" />

    <Button
        android:id="@+id/UpdateButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x30"
        android:layout_marginRight="@dimen/x30"
        android:layout_marginTop="@dimen/x18"
        android:background="@drawable/rounded_button"
        android:text="@string/update"
        android:textColor="@color/black" />

</LinearLayout>